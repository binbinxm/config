user  nginx;
worker_processes  1;

error_log  /mnt/error.log warn;
pid        /var/run/nginx.pid;

events {
    worker_connections  1024;
}

http {
    include       /etc/nginx/mime.types;
    default_type  application/octet-stream;

    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    access_log  /mnt/access.log  main;

    sendfile        on;
    #tcp_nopush     on;

    keepalive_timeout  65;
        client_max_body_size 5120M;
    #gzip  on;

	server {
	    listen 80;
		server_name nb.binya.tech;
		return 301 https://$server_name$request_uri;
	}
        server {
            #listen 80;
			listen 443 ssl http2;
			server_name nb.binya.tech;

            ssl_certificate      /mnt/ssl/nb.binya.tech.pem;
			ssl_certificate_key  /mnt/ssl/nb.binya.tech.key;
            ssl_session_timeout 5m;
            ssl_ciphers ECDHE-RSA-AES128-GCM-SHA256:ECDHE:ECDH:AES:HIGH:!NULL:!aNULL:!MD5:!ADH:!RC4;
            ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
            ssl_prefer_server_ciphers on;

        location / {
            proxy_pass    http://notebook:80;
            proxy_redirect        off;
            proxy_set_header    Host    $http_host;
            proxy_set_header    X-Real-IP    $remote_addr;
            proxy_set_header    X-Forwarded-For    $proxy_add_x_forwarded_for;
            proxy_set_header    X-Forwarded-Proto    $scheme;
        }

            location ~* /api/kernels/ {
				proxy_pass    http://notebook:80;
				proxy_set_header Host $host;
                # websocket support
                proxy_http_version    1.1;
                proxy_set_header      Upgrade "websocket";
                proxy_set_header      Connection "Upgrade";
                proxy_read_timeout    86400;
            }
		}



	server {
		listen 80;
		server_name nc.binya.tech;
		return 301 https://$server_name$request_uri;
	}
	server {
		listen 443 ssl;
		server_name nc.binya.tech;
		
		access_log /var/log/nginx/cloud.example.com.access.log;
		error_log /var/log/nginx/cloud.example.com.error.log;
					
		client_max_body_size 0;
		underscores_in_headers on;
					
		ssl_certificate      /mnt/ssl/nc.binya.tech.pem;
		ssl_certificate_key  /mnt/ssl/nc.binya.tech.key;
										
		ssl_stapling on;
		ssl_stapling_verify on;
												
		location / {
			proxy_headers_hash_max_size 512;
			proxy_headers_hash_bucket_size 64;
			proxy_set_header Host $host;
			proxy_set_header X-Forwarded-Proto $scheme;
			proxy_set_header X-Real-IP $remote_addr;
			proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
																										
			add_header Front-End-Https on;
			proxy_pass    http://nextcloud;
		}
	}
	
	
	server {
		listen 80;
		server_name iot.binya.tech;
		return 301 https://$server_name$request_uri;
	}
	server {
		#listen 80;
		listen 443 ssl;
		server_name iot.binya.tech;

		ssl_certificate      /mnt/ssl/iot.binya.tech.pem;
		ssl_certificate_key  /mnt/ssl/iot.binya.tech.key;
		ssl_session_timeout 5m;
		ssl_ciphers ECDHE-RSA-AES128-GCM-SHA256:ECDHE:ECDH:AES:HIGH:!NULL:!aNULL:!MD5:!ADH:!RC4;
		ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
		ssl_prefer_server_ciphers on;

	location / {
		proxy_pass    http://nodered:1880;
		proxy_redirect        off;
		proxy_set_header    Host    $http_host;
		proxy_set_header    X-Real-IP    $remote_addr;
		proxy_set_header    X-Forwarded-For    $proxy_add_x_forwarded_for;
		proxy_set_header    X-Forwarded-Proto    $scheme;
		proxy_http_version 1.1;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection "upgrade";
		}
	}


	#include /etc/nginx/conf.d/*.conf;
}
